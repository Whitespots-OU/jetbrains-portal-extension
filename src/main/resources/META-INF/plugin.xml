<idea-plugin>
    <id>io.whitespots.appsecplugin</id>
    <name>AppSec</name>
    <vendor url="https://whitespots.io/">Whitespots</vendor>

    <description><![CDATA[
    Plugin provides connection to AppSec Portal by Whitespots,
    allowing developers to check and resolve vulnerabilities right in their favorite IDE!
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Whitespots AppSec" displayType="BALLOON"/>
        <applicationService
                serviceImplementation="io.whitespots.appsecplugin.services.AppSecPluginSettings"/>
        <applicationConfigurable
                parentId="tools"
                id="io.whitespots.appsecplugin.settings.AppSecPluginSettingsConfigurable"
                displayName="Whitespots AppSec"
                instance="io.whitespots.appsecplugin.settings.AppSecPluginSettingsConfigurable"/>
        <toolWindow
                id="Whitespots"
                anchor="right"
                icon="/icons/appsec.svg"
                factoryClass="io.whitespots.appsecplugin.toolWindow.AppSecToolWindowFactory"/>
        <postStartupActivity implementation="io.whitespots.appsecplugin.startup.PluginStartupActivity"/>
        <appStarter implementation="io.whitespots.appsecplugin.protocol.WhitespotsApplicationStarter"/>
    </extensions>
</idea-plugin>